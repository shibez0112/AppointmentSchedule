@page
@model AppointmentSchedule.Pages.Account.LoginModel

<div class="m-1 p-1">
    <div class="text-danger" asp-validation-summary="All"></div>
    <form method="post" >
        <div class="form-group">
            <label asp-for="Username"></label>
            <div asp-validation-for="Username" class="text-danger"></div>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <div asp-validation-for="Password" class="text-danger"></div>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <button class="btn btn-primary mt-2" type="submit">Log In</button>
    </form>
</div>