@page "{id:int?}"
@model AppointmentSchedule.Pages.Appointments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit Appointment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.ID" />
            <input type="hidden" asp-for="Appointment.UserEmail" />

            <div class="form-group mb-3">
                <label asp-for="Appointment.Title" class="control-label"></label>
                <input asp-for="Appointment.Title" class="form-control" />
                <span asp-validation-for="Appointment.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Appointment.CreatedDate" class="control-label"></label>
                <input asp-for="Appointment.CreatedDate" class="form-control" />
                <span asp-validation-for="Appointment.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
